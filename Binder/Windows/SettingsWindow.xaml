<Window x:Class="Binder.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binder"
        mc:Ignorable="d"
        Title="Настройки" Height="132.632" Width="370.69" Background="#FFECECEC" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Canvas>
        <CheckBox x:Name="AutoOpenBinds" Content="Загружать бинды автоматически" Canvas.Left="10" Canvas.Top="10"/>
        <DockPanel Height="30" LastChildFill="False" Canvas.Left="34" Canvas.Top="25" Width="300">
            <TextBlock x:Name="DefaultBindsPath" Canvas.Left="32" TextWrapping="Wrap" Text="Путь к файлу бинов" DockPanel.Dock="Left" VerticalAlignment="Center" IsEnabled="False"/>
            <Button x:Name="SelectAutoBindsPath" Content="..." Height="20" VerticalAlignment="Center" Width="20" Margin="10,5,5,5" IsEnabled="False"/>
        </DockPanel>
        <CheckBox x:Name="AutorunCheckBox" Content="Запускать программу вместе с Windows" Canvas.Left="10" Canvas.Top="55"/>
        <CheckBox x:Name="RunHided" Content="Запускать программу свёртнутой" Canvas.Left="10" Canvas.Top="75"/>
    </Canvas>

</Window>
